---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <div class="row">
    <!-- Left sidebar with chapter navigation -->
    <div class="col-sm-12 col-md-3 blog-sidebar">
      <h3>Chapters</h3>
      {% include collection_sidebar.liquid %}
    </div>

    <!-- Right column with main content -->
    <div class="col-sm-12 col-md-9 blog-content">
      <article>
        {{ content }}

        {% if page.display_chapters %}
          <h2>All Chapters</h2>
          {% include chapters_list.liquid %}
        {% endif %}
      </article>
    </div>
  </div>
</div>

<style>
  .blog-sidebar {
    border-right: 1px solid #eee;
    padding-right: 20px;
  }

  .blog-nav-list {
    list-style-type: none;
    padding-left: 0;
  }

  .blog-nav-item {
    margin-bottom: 10px;
    padding: 5px 10px;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }

  .blog-nav-item:hover {
    background-color: #f5f5f5;
  }

  .blog-nav-item.active {
    background-color: #eee;
    font-weight: bold;
  }

  .chapters-container {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin: 30px 0;
  }

  .chapter-card {
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    position: relative;
  }

  .chapter-card:hover {
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }

  .chapter-number {
    font-weight: bold;
    color: #666;
    margin-bottom: 5px;
  }

  .chapter-title {
    margin-top: 0;
    margin-bottom: 10px;
  }

  .chapter-description {
    margin-bottom: 15px;
    color: #555;
  }

  @media (max-width: 768px) {
    .blog-sidebar {
      border-right: none;
      border-bottom: 1px solid #eee;
      margin-bottom: 20px;
      padding-bottom: 20px;
    }

    .blog-nav-list {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }

    .blog-nav-item {
      margin-bottom: 0;
    }
  }
</style>
